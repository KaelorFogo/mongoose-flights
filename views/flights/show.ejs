<%- include('../partials/header') %>

<section>
  <div>Airline: </div>
  <div><%= flight.airline %></div><br>
  <div>Airport: </div>
  <div><%= flight.airport %></div><br>
  <div>Flight No: </div>
  <div><%= flight.flightNo %></div><br>
  <div>Departs: </div>
  <div><%= flight.departs %></div><br>
</section>

<form id="add-destination-form" method="POST"
  action="/flights/<%= flight._id%>/destinations">
  <label>Arrival:</label>
  <input type="datetime-local" name="arrival"><br>
  <label>Destination:</label>
  <select name="airport">
    <option value="DEN">DEN</option>
    <option value="DFW">DFW</option>
    <option value="AUS">AUS</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>
  <input type="submit" value="Add Destination">
</form>

<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Arrival</th>
        <th>Destination</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(r) { %>
        <tr>
          <!-- .toLocaleDateString() provides a more friendly date format -->
          <td><%= r.arrival %></td>
          <td><%= r.airport %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destinations Yet</h5>
<% } %>

<%- include('../partials/footer') %>